<html>
<head>

    <title>
        <%= title %>

    </title>
    <!-- <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css"> -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/home.css">
</head> 
<body>
<div id="all">
<div id="contact all">
    <h1 id="contact-heading"><i class="fa fa-address-book" ></i> My Contacts List </h1>
<ul>
<% for(let i of contact_list) { %>
<li class="contacts">
<div class="cont">
<p class="p1"><%= i.name %></p>
<p class="p2"><%= i.phone %></p>
</div>
<div class="delete-button">
    <a href="/delete-contact/?id=<%= i._id %>"><i class="fa fa-window-close">

    </i></a>

    </div>
</li>
<% } %>
    
</ul>
</div>

    <form action="/create_contact" method="POST">


<input type="text"  name="name" placeholder="enter name" required>
<input type="number" name="phone" placeholder="enter phone" required>
<button type="submit">
    Add


</button>


</form>
</div>
<script type="text/javascript" src="/js/home.js">
</script>
</body>  

</html>
